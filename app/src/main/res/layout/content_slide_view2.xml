<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content_slide_view2"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <com.demo.songmeiling.view.views.SlideLayout
            android:id="@+id/sl_one"
            android:background="#3399ff"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="50dp">
        <TextView
                android:id="@+id/tv_one"
                android:text="ONE"
                android:background="#55dd5512"
                android:layout_width="200dp"
                android:layout_height="match_parent"/>
    </com.demo.songmeiling.view.views.SlideLayout>
    <com.demo.songmeiling.view.views.SlideLayout
            android:id="@+id/sl_two"
            android:background="#3399dd"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="100dp">
        <TextView
                android:id="@+id/tv_two"
                android:text="TWO"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>
    </com.demo.songmeiling.view.views.SlideLayout>
    <com.demo.songmeiling.view.views.SlideLayout
            android:id="@+id/sl_three"
            android:layout_width="match_parent"
            android:background="#3399bb"
            android:clickable="true"
            android:layout_height="150dp">

    </com.demo.songmeiling.view.views.SlideLayout>
</LinearLayout>
