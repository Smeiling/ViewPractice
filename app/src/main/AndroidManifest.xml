<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demo.songmeiling.view">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".main.MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".recyclerview.RecycleViewActivity"
            android:label="@string/title_activity_grid"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.sml.view.gridview" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".listview.ListViewActivity"
            android:label="@string/title_activity_list_view"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.sml.view.listview" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".cardview.CardViewActivity"
            android:label="@string/title_activity_card_view"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.sml.view.cardview" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".slideview.SlideViewActivity"
            android:label="@string/title_activity_slide_view"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.sml.view.slideview" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".slideview.ScrollViewActivity"
            android:label="@string/title_activity_scroll_view"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.sml.view.scrollview" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".searchview.SearchViewActivity"
            android:label="@string/title_activity_search_view"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.sml.view.searchview" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".scrollmenu.ScrollMenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.sml.view.scrollmenu" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".multiitemview.MultiItemActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.sml.view.multiitemmenu" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".scrolllist.ScrollListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.sml.view.scrolllistview" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>